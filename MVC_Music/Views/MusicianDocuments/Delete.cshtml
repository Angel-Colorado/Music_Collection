@model MVC_Music.Models.MusicianDocument

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Musician Document</h2>

<h3>Are you sure you want to delete @Model.FileName?</h3>
<div>
    <hr />
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Musician)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Musician.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MimeType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MimeType)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href='@ViewData["returnURL"]'>Back to Document List</a>
    </form>
</div>
